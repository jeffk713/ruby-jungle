<h2>Please Sign In</h2>

<div class="col-sm-6">
  <%= form_tag '/signin' do %>

    <div class="form-group">
      <p><strong>Email: </strong></p>
      <%= text_field_tag :email %>
    </div>

    <div class="form-group">
      <p><strong>Password: </strong></p>
      <%= password_field_tag :password%>
    </div>

    <div class="form-group">
      <%= submit_tag "Submit" %>
    </div>
  <% end %>

  <%= link_to 'Not registered yet? go to sign up', signup_path %>
</div>